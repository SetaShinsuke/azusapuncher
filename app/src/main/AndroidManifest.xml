<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.azusasoft.puncher" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar" >
        <!-- 主页 -->
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppNoneFadeTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 登录 -->
        <activity android:name=".activities.LoginActivity"
            android:theme="@style/AppSlideTheme">
        </activity>

        <!-- 申请请假 -->
        <activity android:name=".activities.NewLeaveActivity"
            android:theme="@style/AppSlideTheme">
        </activity>

        <!-- 外勤申请 -->
        <activity android:name=".activities.NewOutDutyActivity"
            android:theme="@style/AppSlideTheme">
        </activity>

        <!-- 申请记录 -->
        <activity android:name=".activities.LeaveHistoryActivity"
            android:theme="@style/AppSlideTheme">
        </activity>

        <!-- 审核记录 -->
        <activity android:name=".activities.VerifyHistoryActivity"
            android:theme="@style/AppSlideTheme">
        </activity>

        <!-- 请假详情:1.请假进度;2.外勤进度;  3.审批请假进度;4.审批外勤进度 -->
        <activity android:name=".activities.LeaveDetailActivity"
            android:theme="@style/AppSlideTheme">
        </activity>

        <!-- 出勤历史记录 -->
        <activity android:name=".activities.AllRecordActivity"
            android:theme="@style/AppSlideTheme">
        </activity>
    </application>

</manifest>
